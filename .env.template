# ScrumMate Environment Configuration Template
# Copy this file to .env and update values for your environment

# Database Configuration
DB_USERNAME=scrummate
DB_PASSWORD=your_secure_password_here
POSTGRES_DB=scrummate
POSTGRES_USER=scrummate
POSTGRES_PASSWORD=your_secure_password_here

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRATION=86400000

# Application Configuration
SPRING_PROFILES_ACTIVE=docker
LOG_LEVEL=INFO

# Docker Configuration
COMPOSE_PROJECT_NAME=scrummate

# Registry Configuration (for production)
DOCKER_REGISTRY=docker.io
DOCKER_NAMESPACE=scrummate
IMAGE_TAG=latest
